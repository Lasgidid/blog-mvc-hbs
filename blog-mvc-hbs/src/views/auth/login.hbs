<section>
  <h1>Login</h1>
  {{#if error}}<p class="error">{{error}}</p>{{/if}}
  <form action="/login" method="post">
    <label>Username
      <input type="text" name="username" required />
    </label>
    <label>Password
      <input type="password" name="password" required />
    </label>
    <button class="btn">Login</button>
  </form>
</section>