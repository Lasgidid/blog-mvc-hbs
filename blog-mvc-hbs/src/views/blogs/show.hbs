<article class="blog-post">
  <h1>{{blog.title}}</h1>
  <p class="meta">By {{blog.author}} â€¢ {{formatDate blog.createdAt}}</p>
  <div class="body">{{blog.body}}</div>

  {{#if currentUser}}
    <div class="actions">
      <a class="btn" href="/blogs/{{blog._id}}/edit">Edit</a>
      <form action="/blogs/{{blog._id}}?_method=DELETE" method="post" style="display:inline">
        <button class="btn danger">Delete</button>
      </form>
    </div>
  {{/if}}
</article>
